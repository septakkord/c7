#pragma once

#include <memory>
#include <type/object>

namespace type
{
    class traceback : public object
    {
    public:
        class entry;
        class path;

        entry& operator [] (int offset);

        const entry& operator [] (int offset) const;

    private:
        std::shared_ptr<path> m_path;
    };

    class traceback::entry : public object
    {
    public:

    private:
        const char* m_file;
        int line;
    };
}
